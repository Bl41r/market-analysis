{% extends "layout.jinja2" %}
{% block body %}

  <!-- <div class="jumbotron"> -->
  <div class="panel panel-default">
    <div class="panel-body">
      <h2>Admin.jinja2</h2>
      <p>Display a list of user info populated from the User table. Provide options to Remove user, Request a password updated Etc</p>
    </div>
  </div>

  <!-- </div> -->

  <table class="table table-inverse">
    <thead>
      <tr>
        <th>ID #</th>
        <th>username</th>
        <th>first name</th>
        <th>last name</th>
        <th>email</th>
        <th>email ver</th>
        <th>sms #</th>
        <th>sms # ver</th>
        <th>active</th>
        <th>date joined</th>
        <th>date last logged</th>
      </tr>
    </thead>
      <tbody>
        {% for user in users %}
          <tr>
            <th scope="row">{{ user.id }}</th>
            <td><bold>{{ user.username }}</bold></td>
            <td>{{ user.first_name }}</td>
            <td>{{ user.last_name }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.email_verified }}</td>
            <td>{{ user.phone_number }}</td>
            <td>{{ user.phone_number_verified }}</td>
            <td>{{ user.active }}</td>
            <td>{{ user.date_joined }}</td>
            <td>{{ user.date_last_logged }}</td>
          </tr>
        {% endfor %}
  </table>

{% endblock %}
